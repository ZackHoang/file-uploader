generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int  @id @default(autoincrement())
  username String @unique
  password String
  folders Folder[]
  @@map("users")
}

model Folder {
  id String @id @default(uuid())
  name String 
  userID Int
  author User @relation(fields: [userID], references: [id])
  parentID String? @unique
  parent Folder? @relation("ParentChildren", references: [parentID], fields: [id])
  children Folder[] @relation("ParentChildren")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("folders")
}

model File {
  id Int @id @default(autoincrement())
  name String
  size Int
  author String @unique
  folderID String @default(".")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  url String
  @@map("files")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}