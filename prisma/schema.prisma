generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int  @id @default(autoincrement())
  username String @unique
  password String
  folders Folder[]
  files File[]
  @@map("users")
}

model Folder {
  id Int @id @default(autoincrement())
  name String 
  uuid String @unique
  userID Int
  author User @relation(fields: [userID], references: [id])
  files File[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("folders")
}

model File {
  id Int @id @default(autoincrement())
  name String
  size Bytes
  userId Int
  author User @relation(fields: [userId], references: [id])
  folderID String @default(".")
  folder Folder @relation(fields: [folderID], references: [uuid])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("files")
}